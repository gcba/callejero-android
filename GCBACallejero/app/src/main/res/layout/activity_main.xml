<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.gcb.callejero.example.MainActivity">

    <com.gcba.callejero.ui.CallejeroView
        android:id="@+id/callejero"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/Direccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Coordenadas"
        android:textSize="15dp"/>
    <TextView
        android:id="@+id/location_x"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/location_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Switch
        android:id="@+id/switchButton2"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="75dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forzar normalizaciÃ³n"
        android:textSize="20dp"/>

    <Switch
        android:id="@+id/switchButton3"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="75dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver solo CABA  "
        android:textSize="20dp"/>

    <Switch
        android:id="@+id/switchButtonShowPlaces"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="75dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar Places"
        android:textSize="20dp"/>
    <Switch
        android:id="@+id/switchButton"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="75dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar PIN  "
        android:textSize="20dp"/>
</LinearLayout>
